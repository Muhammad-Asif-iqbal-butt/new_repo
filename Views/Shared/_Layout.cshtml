@using MVC.Models
@using System.Data
<!DOCTYPE html>
@{Customer c = (Customer)HttpContext.Current.Session["user"];}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <script src="~/Scripts/bootstrap.js"></script> 
 
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:chocolate" >

    <div class="container-fluid">

        <nav class="navbar navbar-inverse" role="navigation">
            <div class="navbar-brand">
                <a class="navbar-text" href="#"> </a>
                <img src="~/images/logo.jpg" alt="Chania" style="width:100px; height:50px">
            </div>

            @if (Session["user"] == null)
            {
                <ul class="nav navbar-nav pull-left list-inline > li">
                    <li style="scrollbar-face-color:white; font-family: 'Felix Titling'; color:gold ; font-size: large">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li style="scrollbar-face-color:white; font-family: 'Felix Titling'; color:gold ; font-size: large">@Html.ActionLink("Log In", "SignIn", "User")</li>
                    <li style="scrollbar-face-color:white; font-family: 'Felix Titling'; color:gold ; font-size: large">@Html.ActionLink("Register", "SignUp", "User")</li>
                    <li style="scrollbar-face-color:white; font-family: 'Felix Titling'; color:gold ; font-size: large">@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                    <li style="scrollbar-face-color:white; font-family: 'Felix Titling'; color:gold ; font-size: large">@Html.ActionLink("Products", "Index", "Products")</li>
                    <li style="scrollbar-face-color:white; font-family: 'Felix Titling'; color:gold ; font-size: large">@Html.ActionLink("Cart", "Cart", "Home")</li>
                </ul>

            }
            else
            {
                <ul class="nav navbar-nav pull-left list-inline > li">
                    <li style="scrollbar-face-color:white; font-family: 'Felix Titling'; color:gold ; font-size: large">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li style="scrollbar-face-color:white; font-family: 'Felix Titling'; color:gold ; font-size: large">@Html.ActionLink("Sign Out", "LogOut", "User")</li>
                    <li style="scrollbar-face-color:white; font-family: 'Felix Titling'; color:gold ; font-size: large">@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                    <li style="scrollbar-face-color:white; font-family: 'Felix Titling'; color:gold ; font-size: large">@Html.ActionLink("Products", "Index", "Products")</li>
                    <li style="scrollbar-face-color:white; font-family: 'Felix Titling'; color:gold ; font-size: large">@Html.ActionLink("Cart", "Cart", "Home")</li>
                </ul>
             }
            <div>
                <form action="~/Products/Search" class="form-horizontal" role="form" method="post">


                    <div class="form-group">

                        <div class="col-lg-5 pull-left">
                            <input type="text" class="form-control" name="name" placeholder="Search products" />
                        </div>
                        <div class="col-lg- pull-left">
                            <input type="submit" value="Search" class="btn btn-default" />
                        </div>
                    </div>

                </form>
            </div>
        </nav>


        @RenderBody()

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
